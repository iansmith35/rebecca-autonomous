# Rebecca Autonomous Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Configuration  
# Create a bot and get token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Server Configuration
# Port the server will listen on (default: 8080)
PORT=8080

# rube.app Integration (Optional)
# Secret for validating webhooks from rube.app
RUBE_WEBHOOK_SECRET=your_optional_webhook_secret

# Development/Debug Settings (Optional)
# Set to "true" to enable debug logging
DEBUG=false

# Environment indicator
NODE_ENV=production